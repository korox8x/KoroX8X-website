body {
    font-family: Arial, sans-serif;
    text-align: center;
    background: url('images/galaxy-background.jpg') no-repeat center center fixed; /* Galaxy background image */
    background-size: cover; /* Ensures it covers the whole page */
    background-color: #000; /* Fallback color if image doesn't load */
    color: white;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
}
